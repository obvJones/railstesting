<div class="card" style="width: fit-content;">
  <div class="card-body">
    <h5 class="card-title" style="display:flex; justify-content: center;"><%= @friend.first_name %> <%= @friend.last_name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @friend.email %> / <%= @friend.phone %> / <%= @friend.instagram %> </h6><br>
    <% if @friend.user == current_user%>
      <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-primary" %>
    <% end %>
    <%= link_to "Back", friends_path, class:"btn btn-primary" %>
    <% if @friend.user == current_user%>
      <br><br>
      <%= link_to "Delete", @friend, method: :delete, class:"btn btn-danger" %>
    <% end %>
  </div>
</div>